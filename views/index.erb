<html>
  <head>
  <link rel='stylesheet' type='text/css' href='stylesheets/index.css'/>
  </head>
  <body>
    <div id='hanged_man'>
      <img src='images/gallows.png' id='gallows'/>
      <img <%= status[0] %> src='images/head.png' id='head' class='limb'/>
      <img <%= status[1] %> src='images/torso.png' id='torso' class='limb'/>
      <img <%= status[2] %> src='images/left_arm.png' id='left_arm' class='limb'/>
      <img <%= status[3] %> src='images/right_arm.png' id='right_arm' class='limb'/>
      <img <%= status[4] %> src='images/left_leg.png' id='left_leg' class='limb'/>
      <img <%= status[5] %> src='images/right_leg.png' id='right_leg' class='limb'>
    </div>
    <div id="incorrect_guesses">
      <p><%= incorrect %></p>
    </div>
    <p><%= word_status %></p>
    <form action="/guess">
      <input type="text" name="guess"/>
      <input type="submit" value="Make a Guess!"/><br>
    </form>
    <form action ="/new">
      <input type="submit" value="Start a New Game"/>
    </form>
    <hidden "HEY! NO CHEATING, OR I'LL MAKE YOU DO BREADTH FIRST SEARCHES">
  </body>
</html>
